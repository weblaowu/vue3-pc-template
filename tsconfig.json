{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": false,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"skipLibCheck": true,
		"baseUrl": "./",
		"allowJs": true,
		"types": [],
		"paths": {
			"@": ["src"],
			"@/*": ["src/*"],
			"@api/*": ["src/api/*"],
			"@components/*": ["src/components/*"],
			"@utils/*": ["src/utils/*"],
			"@assets/*": ["src/assets/*"],
			"@use/*": ["src/use/*"],
			"@store/*": ["src/store/*"],
			"@middleware/*": ["src/middleware/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"./auto-imports.d.ts",
		"node_modules/tdesign-vue-next/global.d.ts"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
